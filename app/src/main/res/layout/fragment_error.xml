<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.ErrorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_default">

        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/dimen24sp"
            tools:text="Error titulo"
            android:fontFamily="@font/gilroy_bxtra_bold"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_marginTop="@dimen/dimen8dp"
            android:fontFamily="@font/gilroy_light"
            android:textSize="@dimen/dimen16sp"
            tools:text="Error subtitulo"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:paddingStart="@dimen/dimen14dp"
            android:paddingEnd="@dimen/dimen14dp"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:text="@string/txt_retry"
            android:layout_marginTop="@dimen/dimen20dp"
            app:layout_constraintTop_toBottomOf="@id/sub_title"
            android:id="@+id/btn_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>